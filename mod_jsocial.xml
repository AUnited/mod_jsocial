<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://help.aunited.ru/dtd/joomla/3.0/module-install.dtd">
<extension type="module" version="3.0" method="upgrade">
<name>MOD_JSocial</name>
<author>Vitaliy Zhukov</author>
<creationDate>January 2018</creationDate>
<authorEmail>info@aunited.ru</authorEmail>
<authorUrl>http://aunited.ru</authorUrl>
<version>0.1</version>
<copyright>Copyright (c) 2018 AUnuted. All rights reserved.</copyright>
<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
<description>Social Module for Joomla</description>
<files>
	<folder>language</folder>
	<folder>assests</folder>
	<filename module="mod_japlayer">mod_jsocial.php</filename>
	<filename module="mod_japlayer">mod_jsocial.xml</filename>
	<filename>index.html</filename>
</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_jsocial.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_jsocial.sys.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_jsocial.ini</language>
		<language tag="ru-RU">ru-RU/ru-RU.mod_jsocial.sys.ini</language>
	</languages>
<config>
	<fields name="params">
		<fieldset name="basic">
			<field name="width" type="integer" first="0" last="2048" step="20" default="300" label="MOD_JAPLAYER_WIDTH" description="MOD_JAPLAYER_WIDTH_DESC" />
			<field name="height" type="integer" first="0" last="2048" step="20" default="300" label="MOD_JAPLAYER_HEIGHT" description="MOD_JAPLAYER_HEIGHT_DESC" />
		</fieldset>
		<fieldset name="advanced">
            <field name="narrow" type="radio" default="0" class="btn-group btn-group-yesno" label="MOD_JAPLAYER_NARROW" description="MOD_JAPLAYER_NARROW_DESC" >
				<option value="1">JYES</option>
				<option value="0">JNO</option>
			</field>
			<field name="vkgroupid" type="text" default="" label="MOD_JSOCIAL_VKGROUPID" description="MOD_JSOCIAL_VKGROUPID_DESC" />
			<field name="facebookgid" type="text" default="" label="MOD_JSOCIAL_FBGID" description="MOD_JSOCIAL_FBGID_DESC" />
			<field name="twitterid" type="text" default="" label="MOD_JSOCIAL_TWITTERID" description="MOD_JSOCIAL_TWITTERID_DESC" />
			<field name="okid" type="text" default="" label="MOD_JSOCIAL_OKID" description="MOD_JSOCIAL_OKID_DESC" />
		</fieldset>
	</fields>
</config>

<updateservers>
	<server type="extension" priority="1" name="mod_japlayer"><![CDATA[http://help.aunited.ru/japlayer/update/jsocial-update.xml]]></server>
</updateservers>

</extension>
